<ul class="list-unstyled">
  <% microposts.each do |micropost| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(micropost.user, { size: 50 }) %>" alt="">
      <div class="media-body">
        <div>
          <%= link_to micropost.user.name, user_path(micropost.user) %> <span class="text-muted">posted at <%= micropost.created_at %></span>
        </div>
        <div>
          <p><%= micropost.content %></p>
        </div>
        <div class="row">
          <div class="col-sm-6">
            <% if current_user.like?(micropost) %>
              <%= form_with(model: current_user.favorites.find_by(micropost_id: micropost.id), local: true, method: :delete) do |f| %>
                <%= hidden_field_tag :micropost_id, micropost.id %>
                <%= f.submit 'Unlike', class: 'btn btn-danger btn-block' %>
              <% end %>
            <% else %>
              <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
                <%= hidden_field_tag :micropost_id, micropost.id %>
                <%= f.submit 'Like', class: 'btn btn-primary btn-block' %>
              <% end %>
            <% end %>
          </div>
          <div class="col-sm-6">
            <% if current_user == micropost.user %>
              <%= link_to "Delete", micropost, method: :delete, data: {confirm: "You sure?"}, class: "btn btn-danger" %>
            <% end %>
          </div>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate microposts %>
</ul>